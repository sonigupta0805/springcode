

  <beans xmlns="http://www.springframework.org/schema/beans" 
       xmlns:util="http://www.springframework.org/schema/util" 
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
       xmlns:schemaLocation= " http://www.springframework.org/schema/beans
                    http://www.springframework.org/schema/beans/spring-beans-4.0.xsd
                    http://www.springframework.org/schema/context
                    http://www.springframework.org/schema/context/spring-context-4.0.xsd
                    http://www.springframework.org/schema/util 
                    http://www.springframework.org/schema/util/spring-util-4.0.xsd ">
                  
                                  
   
    <bean id="d" class="beans.Demo">                                        
     <property name="fruits">
      <util:list list-class="java.util.Vector">
       <value>Apple</value>
       <value>Mango</value>               
       <value>Banana</value>
       <value>Watermelon</value>
      </util:list>
     </property>  


 <property name="cricketers">                             
   <util:set set-class="java.util.TreeSet">
    <value>Dhoni</value>
    <value>Sehwag</value>
    <value>Virat</value>      
    <value>Sachin</value>
   </util:set>
 </property>


 <property name="countrycap">
    <util:map map-class="java.util.Hashtable">
     <entry key="IND" value="delhi"/>
     <entry key="PAK" value="islam"/>
   </util:map>
 </property>
 
 </bean>
</beans>          